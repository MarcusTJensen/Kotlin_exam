<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/fragment_choose_team_name"
                                             tools:context=".ChooseTeamNameFragment"
                                             android:background="@color/colorSkyBlue"
                                             android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:id="@+id/textInputLayout" android:layout_marginTop="42dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewLosses">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lagets navn" android:id="@+id/team_name"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
            android:text="Velg et navn for laget ditt!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLosses" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="248dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:textSize="30sp"/>
    <Button
            android:text="Bekreft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirm_name_button" android:layout_marginTop="74dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout" app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>