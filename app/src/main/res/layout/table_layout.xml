<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

        <LinearLayout
                android:layout_width="406dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:text="TextView"
                        android:layout_width="112dp"
                        android:layout_height="match_parent"
                        android:id="@+id/textViewRank"
                        android:padding="5dp"
                        android:layout_weight="1"/>
                <TextView
                        android:id="@+id/textViewName"
                        android:layout_width="365dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Start"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:layout_height="wrap_content" android:id="@+id/textView33" android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:padding="3dp"
                        android:layout_height="wrap_content" android:id="@+id/textViewGames" android:layout_weight="1"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:padding="3dp"
                        android:layout_height="wrap_content" android:id="@+id/textViewWins" android:layout_weight="1"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:padding="3dp"
                        android:layout_height="wrap_content" android:id="@+id/textViewDraws" android:layout_weight="1"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:padding="3dp"
                        android:layout_height="wrap_content" android:id="@+id/textViewLosses"
                        android:layout_weight="1"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:padding="3dp"
                        android:layout_height="wrap_content" android:id="@+id/textViewGoalDiff"
                        android:layout_weight="1"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textViewPoints"
                        android:padding="3dp"
                        android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>